@{
}

<a class=" btn btn-primary" asp-area="" asp-controller="Phim" asp-action="Themmoi">Thêm mới</a>
<hr />
<br />
<table class="table table-bordered" style="text-align:center">
    <thead>
        <tr>
            <th>Mã phim</th>
            <th>Tên phim</th>
            <th>Ngày phát hành</th>
            <th>Số lượng đĩa</th>
            <th>Đơn giá</th>
            <th>Chức năng</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in ViewBag.Phim)
        {
            <tr>
                <td>@p.Maphim</td>
                @* <td>@p.Tenphim</td> *@
                <td>@Html.Raw(p.Tenphim)</td>
                <td>@p.NgayPh</td>
                <td>@p.Sldia</td>
                <td>@p.Dongia</td>
                <td><a asp-action="Sua" asp-controller="Phim" asp-route-maphim="@p.Maphim" class="btn btn-danger">Sửa</a>
                    <a asp-action="Xoa" asp-controller="Phim" asp-route-maphim="@p.Maphim" class="btn btn-info">Xóa</a>
                </td>
                
            </tr>
        }
        
        
    </tbody>
</table>