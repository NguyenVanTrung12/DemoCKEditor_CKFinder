@model DemoSQL.Models.Phim;
<form action="Sua" method="post">
    <div class="mb-3 mt-3">
        <label for="email" class="form-label">Mã phim</label>
        <input type="text" class="form-control" name="Maphim" asp-for="Maphim" readonly>
    </div>
    <div class="mb-3 mt-3">
        <label for="email" class="form-label">Tên phim</label>
        <input type="text" class="form-control" name="Tenphim" asp-for="Tenphim" />
    </div>
    <div class="mb-3 mt-3">
        <label for="email" class="form-label">Ngày phát hành</label>
        <input type="text" class="form-control" name="NgayPh" asp-for="NgayPh">
    </div>
    <div class="mb-3 mt-3">
        <label for="email" class="form-label">Số lượng đĩa</label>
        <input type="text" class="form-control" name="Sldia" asp-for="Sldia">
    </div>
    <div class="mb-3 mt-3">
        <label for="email" class="form-label">Đơn giá</label>
        <input type="text" class="form-control" name="Dongia" asp-for="Dongia">
    </div>
    <button type="submit" class="btn btn-primary">Lưu lại</button>
    <a class=" btn btn-primary" asp-area="" asp-controller="Phim" asp-action="Index">Trở lại</a>
</form>